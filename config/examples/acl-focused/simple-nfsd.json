{
  "server": {
    "listen_address": "0.0.0.0",
    "listen_port": 2049,
    "root_path": "/var/lib/simple-nfsd/shares",
    "enable_tcp": true,
    "enable_udp": true,
    "max_connections": 100
  },
  "security": {
    "enable_auth": true,
    "allow_anonymous": false,
    "auth_methods": ["AUTH_SYS"],
    "enable_acl": true,
    "default_umask": "022",
    "root_squash": true,
    "all_squash": false
  },
  "acl_management": {
    "enabled": true,
    "default_acl": {
      "entries": [
        {
          "type": 1,
          "id": 0,
          "permissions": 7,
          "name": "owner"
        },
        {
          "type": 2,
          "id": 0,
          "permissions": 5,
          "name": "group"
        },
        {
          "type": 4,
          "id": 0,
          "permissions": 5,
          "name": "others"
        }
      ]
    },
    "inherit_acls": true,
    "acl_cache": true,
    "acl_cache_ttl": 300
  },
  "file_access_tracking": {
    "enabled": true,
    "timeout": 3600,
    "track_modes": ["READ_ONLY", "WRITE_ONLY", "READ_WRITE", "APPEND"],
    "track_sharing": ["EXCLUSIVE", "SHARED_READ", "SHARED_WRITE", "SHARED_ALL"],
    "cleanup_interval": 300,
    "conflict_detection": true,
    "logging": true
  },
  "logging": {
    "log_level": "info",
    "log_file": "/var/log/simple-nfsd.log",
    "max_log_size": "100MB",
    "max_log_files": 10,
    "audit_log": true,
    "audit_log_file": "/var/log/simple-nfsd-acl-audit.log",
    "audit_events": ["getacl", "setacl", "file_open", "file_close", "access_conflict"]
  },
  "shares": {
    "acl_managed": {
      "path": "/var/lib/simple-nfsd/shares/acl_managed",
      "read_only": false,
      "allowed_clients": ["192.168.1.0/24"],
      "options": ["rw", "sync", "no_subtree_check"],
      "acl_enabled": true,
      "file_access_tracking": true
    },
    "shared_workspace": {
      "path": "/var/lib/simple-nfsd/shares/shared_workspace",
      "read_only": false,
      "allowed_clients": ["10.0.0.0/8"],
      "options": ["rw", "sync", "no_subtree_check"],
      "acl_enabled": true,
      "file_access_tracking": true,
      "default_sharing_mode": "SHARED_READ"
    },
    "exclusive_access": {
      "path": "/var/lib/simple-nfsd/shares/exclusive_access",
      "read_only": false,
      "allowed_clients": ["192.168.1.100"],
      "options": ["rw", "sync", "no_subtree_check"],
      "acl_enabled": true,
      "file_access_tracking": true,
      "default_sharing_mode": "EXCLUSIVE"
    }
  }
}

